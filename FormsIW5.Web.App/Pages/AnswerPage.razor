@page "/showAnswers/{Id:guid}"

@using FormsIW5.Web.App.Components;

<h3>Form Answers</h3>

<div class="row">
    <div class="col-md">
        <div class="bg-sec h-100 rounded">
            @if (Answers.Count != 0)
            {
                <table class="table border table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="row">Question Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var answer in Answers)
                        {
                            <p>@answer.TextAnswer</p>
                            <p>@answer.IntegerAnswer</p>
                        }
                       </tbody>
                </table>
            }
        </div>
    </div>
</div>