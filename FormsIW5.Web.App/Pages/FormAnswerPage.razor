@page "/answerForm/{Id:guid}"

@using FormsIW5.Web.App.Components;
@using FormsIW5.Web.App.Components.Answers


<button type="submit" class="btn btn-success" @onclick="@Answer">
    Submit Answer
</button>

<h3>Form Detail</h3>

<h1>@formDetail.FormName</h1>
<h1>@formDetail.StartDate</h1>
<h1>@formDetail.EndDate</h1>

<h3>QuestionsList</h3>

<div class="row">
    <div class="col-md">
        <div class="bg-sec h-100 rounded">
            @if (formDetail.Questions.Count != 0)
            {
                <table class="table border table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="row">Question Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in formDetail.Questions)
                        {
                            <AnswerComponent Question="@question" />
                        }
                       </tbody>
                </table>
            }
        </div>
    </div>
</div>