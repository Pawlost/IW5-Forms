@page "/forms/{Id:guid}"

@using FormsIW5.Web.App.Components;

<AuthorizeView>
    <Authorized>
        <button type="submit" class="btn btn-success" @onclick="@Edit">
            Edit
        </button>

        <button type="submit" class="btn btn-success" @onclick="@Answer">
            Answer
        </button>

         <button type="submit" class="btn btn-success" @onclick="@ShowAnswers">
            Show Answers
        </button> 
    </Authorized>
    <NotAuthorized>
        <p>You must be signed to be able to answer form</p>
    </NotAuthorized>
</AuthorizeView>

<h3>Form Detail</h3>

<h1>@formDetail.FormName</h1>
<h1>@formDetail.StartDate</h1>
<h1>@formDetail.EndDate</h1>

<h3>QuestionsList</h3>

<div class="row">
    <div class="col-md">
        <div class="bg-sec h-100 rounded">
            @if (questionList.Count != 0)
            {
                <table class="table border table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th scope="row">Question Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in questionList)
                        {
                            <p>@question.QuestionText</p>

                        }
                       </tbody>
                </table>
            }
        </div>
    </div>
</div>