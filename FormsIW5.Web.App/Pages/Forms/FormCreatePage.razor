@page "/forms/create"
@page "/forms/create/{Id:guid}"

@using FormsIW5.Web.App.Components;
@using FormsIW5.Web.App.Components.Forms

<AuthorizeView>
    <Authorized>
        @if (Id == Guid.Empty)
        {
            <button onclick="@CreateDraftAsync">Create a new draft</button>
        }
        else
        {
            <FormEditComponent FormId=@Id />
        }
    </Authorized>
    <NotAuthorized>
        <p>You must be signed in to create a new form.</p>
        <a href="authentication/login" class="nav-link font-weight-bold">Log in</a>
    </NotAuthorized>
</AuthorizeView>